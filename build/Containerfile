FROM golang:1.20.4 as builder
WORKDIR /app
COPY ./go.mod ./go.sum ./
RUN go mod download
COPY . .
RUN go build -race ./cmd/tzproj

FROM ubuntu:23.04
RUN apt update
RUN apt install ca-certificates -y
RUN update-ca-certificates
WORKDIR /app
COPY ./db/migrations /app/db/migrations
COPY --from=builder /app/tzproj /app/app
ENTRYPOINT ["./app"]
